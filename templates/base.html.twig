<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav>
        <a href="{{ path('chansons') }}">Accueil</a>
        <a href="{{ path('chansonsAjouter') }}">Ajouter une chanson</a>
        <a href="{{ path('genres') }}">Genres</a>
        <a href="{{ path('genreAjouter') }}">Ajouter un genre</a>
    </nav>
        {% block body %}
            <main class="chansons accueil">
            {% for chanson in chansons %}
                <a href="{{ path('afficherUne', {'id': chanson.id}) }}">{{ chanson.titre }}</a>
            {% endfor %}
            </main>
        {% endblock %}
    </body>
</html>
